{
  // https://stackoverflow.com/questions/46520882/build-and-distribute-a-typescript-project
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6", // <--
    "strict": false, //true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "removeComments": true,
    "declaration": true, // <--
    "downlevelIteration": true,
    "noUnusedLocals": false,//true,
    "noUnusedParameters": false
  }
}
